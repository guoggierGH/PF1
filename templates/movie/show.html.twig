{% extends 'base.html.twig' %}

{% block title %}{{ movie.titulo }} - Movie Recommendations{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-4">
        <!-- Movie Poster -->
        {% if movie.poster %}
            <img src="{{ asset('uploads/posters/' ~ movie.poster) }}" 
                 class="img-fluid rounded shadow-lg" 
                 alt="{{ movie.titulo }}">
        {% else %}
            <div class="bg-secondary rounded shadow-lg d-flex align-items-center justify-content-center" 
                 style="height: 500px;">
                <i class="bi bi-film" style="font-size: 6rem;"></i>
            </div>
        {% endif %}

        <!-- Actions -->
        {% if is_granted('ROLE_USER') %}
            <div class="mt-3 d-grid gap-2">
                {% if not hasViewed %}
                    <form method="post" action="{{ path('movie_mark_viewed', {'id': movie.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('mark_viewed' ~ movie.id) }}">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Marcar como vista
                        </button>
                    </form>
                {% else %}
                    <button class="btn btn-outline-success w-100" disabled>
                        <i class="bi bi-check-circle-fill"></i> Ya la viste
                    </button>
                {% endif %}

                <a href="{{ path('recommendation_new', {'movieId': movie.id}) }}" 
                   class="btn btn-primary">
                    <i class="bi bi-share"></i> Recomendar
                </a>
            </div>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3 d-grid gap-2">
                <a href="{{ path('movie_edit', {'id': movie.id}) }}" 
                   class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <button type="button" 
                        class="btn btn-danger"
                        onclick="if(confirm('¿Estás seguro?')) { document.getElementById('delete-form').submit(); }">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                <form id="delete-form" 
                      method="post" 
                      action="{{ path('movie_delete', {'id': movie.id}) }}" 
                      style="display: none;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ movie.id) }}">
                </form>
            </div>
        {% endif %}
    </div>

    <div class="col-md-8">
        <!-- Movie Info -->
        <h1 class="mb-3">{{ movie.titulo }}</h1>
        
        <div class="mb-3">
            <span class="badge bg-primary fs-6 me-2">{{ movie.genero }}</span>
            <span class="badge bg-secondary fs-6 me-2">{{ movie.anio }}</span>
            {% if movie.duracion %}
                <span class="badge bg-info fs-6">{{ movie.duracion }} min</span>
            {% endif %}
        </div>

        {% if movie.director %}
            <p class="lead mb-3">
                <i class="bi bi-camera-reels"></i> Dirigida por <strong>{{ movie.director }}</strong>
            </p>
        {% endif %}

        <!-- Rating -->
        <div class="card mb-4 bg-dark">
            <div class="card-body">
                {% if averageRating %}
                    <div class="d-flex align-items-center">
                        <div class="me-4">
                            <h2 class="mb-0 text-warning">{{ averageRating }}</h2>
                            <div class="rating-stars">
                                {% for i in 1..5 %}
                                    <i class="bi bi-star{% if i <= averageRating %}-fill{% endif %}"></i>
                                {% endfor %}
                            </div>
                        </div>
                        <div>
                            <p class="mb-0 text-muted">Basado en {{ reviewCount }} reseña(s)</p>
                        </div>
                    </div>
                {% else %}
                    <p class="mb-0 text-muted">
                        <i class="bi bi-star"></i> Aún no hay calificaciones
                    </p>
                {% endif %}
            </div>
        </div>

        <!-- Synopsis -->
        <h4>Sinopsis</h4>
        <p class="lead">{{ movie.sinopsis }}</p>

        <!-- Review Form -->
        {% if is_granted('ROLE_USER') %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        {% if userReview %}
                            <i class="bi bi-pencil"></i> Editar mi reseña
                        {% else %}
                            <i class="bi bi-star"></i> Escribir una reseña
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(reviewForm) }}
                        <div class="mb-3">
                            <label class="form-label">Puntuación</label>
                            {{ form_widget(reviewForm.puntuacion, {
                                'attr': {'class': 'form-select'}
                            }) }}
                            {{ form_errors(reviewForm.puntuacion) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Comentario (opcional)</label>
                            {{ form_widget(reviewForm.comentario, {
                                'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Escribe tu opinión...'}
                            }) }}
                            {{ form_errors(reviewForm.comentario) }}
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> 
                            {% if userReview %}Actualizar{% else %}Publicar{% endif %} reseña
                        </button>
                    {{ form_end(reviewForm) }}
                </div>
            </div>
        {% endif %}

        <!-- Reviews List -->
        <h4 class="mb-3">
            <i class="bi bi-chat-left-text"></i> Reseñas ({{ reviews|length }})
        </h4>

        {% for review in reviews %}
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="mb-1">{{ review.user.nombreCompleto }}</h6>
                            <div class="rating-stars mb-2">
                                {% for i in 1..5 %}
                                    <i class="bi bi-star{% if i <= review.puntuacion %}-fill{% endif %}"></i>
                                {% endfor %}
                            </div>
                        </div>
                        <small class="text-muted">{{ review.createdAt|date('d/m/Y') }}</small>
                    </div>
                    {% if review.comentario %}
                        <p class="card-text mt-2">{{ review.comentario }}</p>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aún no hay reseñas para esta película.
            </div>
        {% endfor %}
    </div>
</div>

<div class="mt-4">
    <a href="{{ path('movie_index') }}" class="btn btn-outline-light">
        <i class="bi bi-arrow-left"></i> Volver al catálogo
    </a>
</div>
{% endblock %}