{% extends 'base.html.twig' %}

{% block title %}Registro - Movie Recommendations{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: var(--primary-color);"></i>
                    <h2 class="mt-3">Crear Cuenta</h2>
                    <p class="text-muted">Únete a nuestra comunidad</p>
                </div>

                {{ form_start(registrationForm) }}
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="registration_form_nombre" class="form-label">
                            <i class="bi bi-person"></i> Nombre
                        </label>
                        {{ form_widget(registrationForm.nombre, {
                            'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Juan'}
                        }) }}
                        {{ form_errors(registrationForm.nombre) }}
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="registration_form_apellido" class="form-label">
                            <i class="bi bi-person"></i> Apellido
                        </label>
                        {{ form_widget(registrationForm.apellido, {
                            'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Pérez'}
                        }) }}
                        {{ form_errors(registrationForm.apellido) }}
                    </div>
                </div>

                <div class="mb-3">
                    <label for="registration_form_email" class="form-label">
                        <i class="bi bi-envelope"></i> Correo Electrónico
                    </label>
                    {{ form_widget(registrationForm.email, {
                        'attr': {'class': 'form-control form-control-lg', 'placeholder': 'tu@email.com'}
                    }) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-3">
                    <label for="registration_form_fechaNacimiento" class="form-label">
                        <i class="bi bi-calendar"></i> Fecha de Nacimiento
                    </label>
                    {{ form_widget(registrationForm.fechaNacimiento, {
                        'attr': {'class': 'form-control form-control-lg'}
                    }) }}
                    {{ form_errors(registrationForm.fechaNacimiento) }}
                </div>

                <div class="mb-3">
                    <label for="registration_form_plainPassword" class="form-label">
                        <i class="bi bi-lock"></i> Contraseña
                    </label>
                    {{ form_widget(registrationForm.plainPassword.first, {
                        'attr': {'class': 'form-control form-control-lg', 'placeholder': '********'}
                    }) }}
                    <small class="form-text text-muted">
                        Mínimo 8 caracteres
                    </small>
                    {{ form_errors(registrationForm.plainPassword.first) }}
                </div>

                <div class="mb-3">
                    <label for="registration_form_plainPassword_second" class="form-label">
                        <i class="bi bi-lock-fill"></i> Confirmar Contraseña
                    </label>
                    {{ form_widget(registrationForm.plainPassword.second, {
                        'attr': {'class': 'form-control form-control-lg', 'placeholder': '********'}
                    }) }}
                    {{ form_errors(registrationForm.plainPassword.second) }}
                </div>

                <div class="mb-3 form-check">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {'class': 'form-check-input'}
                    }) }}
                    <label class="form-check-label" for="registration_form_agreeTerms">
                        Acepto los términos y condiciones
                    </label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                    <i class="bi bi-check-circle"></i> Registrarse
                </button>

                <div class="text-center">
                    <p class="mb-0">
                        ¿Ya tienes cuenta? 
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            Inicia sesión aquí
                        </a>
                    </p>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}