{% extends 'base.html.twig' %}

{% block title %}Crear Grupo - Movie Recommendations{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Grupo
                </h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.nombre, 'Nombre del Grupo', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Ej: Amantes del Cine Clásico'}}) }}
                    {{ form_errors(form.nombre) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.descripcion, 'Descripción', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Describe de qué trata este grupo...'}}) }}
                    {{ form_errors(form.descripcion) }}
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Crear Grupo
                    </button>
                    <a href="{{ path('group_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}