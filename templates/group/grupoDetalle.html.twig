{% extends 'base.html.twig' %}

{% block title %}{{ group.nombre }} - Movie Recommendations{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <!-- Group Header -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="mb-2">
                            <i class="bi bi-people-fill text-primary"></i> {{ group.nombre }}
                        </h1>
                        <p class="lead mb-3">{{ group.descripcion }}</p>
                        <p class="text-muted mb-0">
                            <i class="bi bi-people"></i> {{ group.membersCount }} miembros
                            <span class="mx-2">•</span>
                            <i class="bi bi-calendar"></i> Creado el {{ group.createdAt|date('d/m/Y') }}
                        </p>
                    </div>
                    <div>
                        {% if isMember %}
                            <form method="post" 
                                  action="{{ path('group_leave', {'id': group.id}) }}"
                                  onsubmit="return confirm('¿Estás seguro de salir del grupo?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('leave' ~ group.id) }}">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-box-arrow-right"></i> Salir del grupo
                                </button>
                            </form>
                        {% else %}
                            <form method="post" action="{{ path('group_join', {'id': group.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('join' ~ group.id) }}">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i> Unirse al grupo
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {% if isMember %}
        <!-- Recommend Movie Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-share"></i> Recomendar una película al grupo
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(recommendForm) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Película</label>
                            {{ form_widget(recommendForm.movie, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(recommendForm.movie) }}
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Comentario (opcional)</label>
                            {{ form_widget(recommendForm.comentario, {
                                'attr': {'class': 'form-control', 'rows': 3, 'placeholder': '¿Por qué recomiendas esta película?'}
                            }) }}
                            {{ form_errors(recommendForm.comentario) }}
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Recomendar
                            </button>
                        </div>
                    </div>
                {{ form_end(recommendForm) }}
            </div>
        </div>

        <!-- Group Recommendations -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-film"></i> Recomendaciones del Grupo
                </h5>
            </div>
            <div class="card-body">
                {% if recommendations is not empty %}
                    <div class="row">
                        {% for recommendation in recommendations %}
                            <div class="col-md-6 mb-3">
                                <div class="card bg-dark h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">
                                                {{ recommendation.movie.titulo }}
                                            </h6>
                                            <span class="badge bg-primary">{{ recommendation.movie.genero }}</span>
                                        </div>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="bi bi-person"></i> Recomendado por {{ recommendation.user.nombreCompleto }}
                                            </small>
                                            <br>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> {{ recommendation.createdAt|date('d/m/Y') }}
                                            </small>
                                        </p>
                                        {% if recommendation.comentario %}
                                            <p class="card-text"><em>"{{ recommendation.comentario }}"</em></p>
                                        {% endif %}
                                        <a href="{{ path('movie_show', {'id': recommendation.movie.id}) }}" 
                                           class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i> Ver película
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> Aún no hay recomendaciones en este grupo.
                    </div>
                {% endif %}
            </div>
        </div>
        {% endif %}

        <!-- Members List -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-people"></i> Miembros ({{ group.members|length }})
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for member in group.members %}
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" 
                                     style="width: 50px; height: 50px;">
                                    <i class="bi bi-person-fill fs-4"></i>
                                </div>
                                <div>
                                    <strong>{{ member.nombreCompleto }}</strong>
                                    <br>
                                    <small class="text-muted">{{ member.email }}</small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a href="{{ path('group_index') }}" class="btn btn-outline-light">
        <i class="bi bi-arrow-left"></i> Volver a grupos
    </a>
</div>
{% endblock %}